<!-- 自分のマイページの時以外表示する -->
<% unless user.id == current_user.id %>
  <!-- 既にチャットを始めているかどうかで表示を分ける -->
  <% if @is_room == true %>
    <%= link_to "チャットへ", room_path(@room_id), class: "btn btn-secondary" %>
  <% else %>
    <%= form_with model: room, url: rooms_path, local:true do |f| %>
      <%= fields_for entry do |e| %>
        <%= e.hidden_field :user_id, :value => user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class: "btn btn-secondary" %>
    <% end %>
  <% end %>
<% end %>