
<!-- メッセージを表示する -->
<div class="messages">
  <% if messages.present? %>
    <% messages.each do |message| %>
      <% if message.user == current_user %>
        <%= render 'shared/messages/current_user-message', message: message %>
      <% else %>
        <div class="left-message">
          <%= render 'shared/messages/opponent_user-messgae', message: message %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>
</div>

<div class="error">
  <%= render 'shared/errors', obj: @message %>
</div>

<section class="message-form">
  <%= render 'shared/messages/message-form', message: @message, room: @room %>
</section>