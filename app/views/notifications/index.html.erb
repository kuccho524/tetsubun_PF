<!-- 通知一覧画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <h1 class="heading">通知</h1>
      <!-- 通知内容の全削除 -->
      <section class="notification_all_delete">
        <%= link_to '通知内容を全て削除する', notification_all_delete_path, method: :delete, data: { confirm: '通知内容を削除しますか？' }, class: "btn btn-danger" %>
      </section>

      <section class="notification-table">

        <!-- 通知の有無で表示内容を分ける -->
        <% if @notifications.exists? %>
          <%= render 'shared/notifications/notifications', notifications: @notifications %>
        <% else %>
          <h3 class="text-center">通知はありません</h3>
        <% end %>
      </section>

      <!-- ページング -->
      <div class="pagination mx-auto">
        <%= paginate @notifications %>
      </div>
    </div>
  </div>
</div>