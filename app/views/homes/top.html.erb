<!-- 画像スライダー -->
<section id="image-sliders">
  <div id="train-images">
    <div class="train-image1"></div>
    <div class="train-image2"></div>
    <div class="train-image3"></div>
    <div class="train-image4"></div>
    <div class="train-image5"></div>
    <div class="train-image6"></div>
    <div class="train-image7"></div>
    <div class="train-image8"></div>
  </div>
  <div class="about-guest mx-auto">
    <div class="guest-content text-center">
      お気軽に触りたい方は、<br>
      下記よりゲストログインできます。
    </div>
    <div class="guest-login-button text-center">
      <%= link_to "ゲストログインする", users_guest_sign_in_path, method: :post, class: "btn btn-outline-light hover-img" %>
    </div>
  </div>
</section>

<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">

      <!-- aboutと概要 -->
      <section class="about">
        <%= render 'shared/homes/about' %>
      </section>

      <!-- ログイン/非ログインで表示内容を分ける -->
      <section class="new-train-posts">
        <% if user_signed_in? %>

          <!-- ログインしているユーザにフォローがいる時といない時で表示を変える -->
          <% if @follow_users.empty? %>
            <%= render 'shared/homes/new-trains', trains: @trains %>
          <% else %>
            <div class="timeline">
              <%= render 'shared/homes/timeline', follow_users_trains: @follow_users_trains %>
            </div>
          <% end %>
        <% else %>
          <%= render 'shared/homes/new-trains', trains: @trains %>
        <% end %>
      </section>

      <!-- 投稿一覧画面へのリンク -->
      <section class="link mx-auto text-center">
        <%= link_to '記事一覧ページへ', trains_path, class: 'btn btn-primary' %>
      </section>
    </div>
  </div>
</div>